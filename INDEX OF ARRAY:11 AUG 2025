#include<iostream>
using namespace std;
int main(){
    int arr[]={10,2,3,5,9,6};
    int value=4;
    int n=sizeof(arr)/sizeof(arr[0]);
    int index=-1;
    for(int i=0; i<n; i++){
        if(arr[i]==value){
            index=i;
            break;
        }
    }
    if(index==-1){
        cout<<"value not found";
    }else{
 cout<<"Present at index:"<<index;
    }
    return 0;
}
